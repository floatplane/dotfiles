[core]
	excludesfile = /home/bsharon/.gitignore
	pager = less -FXR -x4
[user]
	name = Brian Sharon
	email = brian@floatplane.us
[branch]
	autosetuprebase = always
[color]
	diff = auto
	status = auto
	branch = auto
    interactive = auto
[alias]
	svn-diff = !git-svn-diff
	diffall = !git-diffall
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
[merge]
	tool = meld
	keepBackup = false
# 	tool = mergetool.rb
# 	log = true

[mergetool]
	prompt = false

[mergetool "mergetool.rb"]
	cmd = mergetool.rb $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	alternate = opendiff
	keepTemporaries = false

[mergetool "meld"]
	keepTemporaries = false

